[user]
  name = Kyle Thompson
  email = me@kkt.dev
  username = kylekthompson
  signingkey = A0C73FCA980EE3BA

[alias]
  a             = add
  amend         = commit --amend --no-edit
  br            = branch
  c             = commit
  co            = checkout
  cob           = checkout -b
  cleanup       = !git remote prune origin && git gc && git clean -dfx && git stash clear
  d             = diff
  ds            = diff --staged
  ls            = !git log --graph --oneline --decorate
  po            = !git push origin $(git branch | cut -d' ' -f2)
  st            = status -sb

[apply]
  whitespace = fix

[color]
  ui = auto

[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green

[color "diff"]
  meta = yellow bold
  frag = magenta bold
  old = red
  new = green

[color "status"]
  added = yellow
  changed = green
  untracked = cyan

[github]
  user = kylekthompson

[credential]
  whitespace = trailing-space,space-before-tab
  editor = vim
  helper = osxkeychain

[core]
  editor = vim
  excludesfile = ~/.gitignore
  attributesfile = ~/.gitattributes
  whitespace = trailing-space,space-before-tab
  pager = diff-so-fancy | less -EFRX -x2
  trustctime = false
  precomposeunicode = false

[push]
  default = current

[merge]
  log = true

[diff]
  compactionHeuristic = true
  tool = vimdiff
  renames = copies

[difftool]
  prompt = false

[help]
  autocorrect = 1

[filter "media"]
  clean = git-media-clean %f
  smudge = git-media-smudge %f

[filter "lfs"]
  clean = git lfs clean %f
  smudge = git lfs smudge %f
  required = true

[commit]
  gpgsign = true
[hub]
	protocol = ssh
[pull]
	ff = only
[init]
	defaultBranch = main
